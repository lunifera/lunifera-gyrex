<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.lunifera</groupId>
		<artifactId>org.lunifera</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<groupId>org.lunifera.runtime.gyrex</groupId>
	<artifactId>org.lunifera.runtime.gyrex</artifactId>
	<packaging>pom</packaging>

	<properties>
		<next-release>0.0.2-SNAPSHOT</next-release>

	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
			</plugin>

			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-compiler-plugin</artifactId>
			</plugin>

			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
			</plugin>

			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-source-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>prepare-for-next-release</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<build>
				<defaultGoal>org.eclipse.tycho:tycho-versions-plugin:set-version</defaultGoal>
				<plugins>
					<plugin>
						<groupId>org.eclipse.tycho</groupId>
						<artifactId>tycho-versions-plugin</artifactId>
						<version>${tycho-version}</version>
						<executions>
							<execution>
								<id>change-next-release</id>
								<goals>
									<goal>set-version</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<newVersion>${next-release}</newVersion>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>p2-kepler</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<properties>
				<PLATFORM-LUNIFERA-DEPLOY-DIR>${LUNIFERA-DEPLOY-DIR}/kepler/gyrex</PLATFORM-LUNIFERA-DEPLOY-DIR>
			</properties>
			<build>
				<defaultGoal>clean verify</defaultGoal>
				<plugins>
					<!-- <plugin> -->
					<!-- <groupId>org.eclipse.tycho.extras</groupId> -->
					<!-- <artifactId>target-platform-validation-plugin</artifactId> -->
					<!-- <version>${tychoExtrasVersion}</version> -->
					<!-- <executions> -->
					<!-- <execution> -->
					<!-- <phase>validate</phase> -->
					<!-- <goals> -->
					<!-- <goal>validate-target-platform</goal> -->
					<!-- </goals> -->
					<!-- <configuration> -->
					<!-- <targetFiles> -->
					<!-- <param>org.lunifera.runtime.target.kepler.target</param> -->
					<!-- </targetFiles> -->
					<!-- <failOnError>true</failOnError> -->
					<!-- </configuration> -->
					<!-- </execution> -->
					<!-- </executions> -->
					<!-- </plugin> -->
				</plugins>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>org.eclipse.tycho</groupId>
							<artifactId>target-platform-configuration</artifactId>
							<version>${tycho-version}</version>
							<configuration>
								<ignoreTychoRepositories>true</ignoreTychoRepositories>
								<target>
									<artifact>
										<groupId>org.lunifera.runtime.gyrex</groupId>
										<artifactId>org.lunifera.runtime.gyrex.target.kepler</artifactId>
										<version>${project.version}</version>
									</artifact>
								</target>
							</configuration>
						</plugin>
					</plugins>
				</pluginManagement>
			</build>
			<modules>
				<module>org.lunifera.runtime.gyrex.target.kepler</module>

				<!-- exclusive for P2 -->
				<module>org.lunifera.runtime.gyrex.p2</module>

				<!-- P2 features -->
				<module>org.lunifera.runtime.gyrex.feature.vaadin</module>
				<!-- end P2 features -->

				<!-- P2 bundles -->
				<module>org.lunifera.runtime.gyrex.vaadin</module>
				<!-- end P2 bundles -->
			</modules>
		</profile>
	</profiles>
</project>